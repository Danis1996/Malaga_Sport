<p id="notice"><%= notice %></p>

<h1>Demande</h1>

<table>
  <thead>
    <tr>
      <th>Lettre de motivation</th>
      <th>Mon parcours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.application_letter %></td>
        <td><%= request.parcours %></td>
        <td><%= link_to 'Show', request %></td>
        <td><a href="#" data-requestid ="<%=@request.id%>" data-id="<%=@request.recrutement_id%>" class="requete">Edité</a> </td>
        <td><%= link_to 'Supprimer', request, method: :delete, data: { confirm: 'Êtes-vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle demande', new_request_path %>
