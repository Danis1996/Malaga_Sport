

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_tag url_for(action: 'update'), method: "patch" do |form|%>
      <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >
        <h1 class="h3 mb-3 font-weight-normal text-center">Créer un club</h1>
        <div class="form-group">
          <%= label_tag :Nom %>
          <%= text_area_tag :name, @club.name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :Catégorie %>
          <%= text_field_tag :category, @club.category, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>Quartier</label>
          <%=select_tag 'quarter_id', options_for_select(@quarters.collect{ |t| [t.name, t.id] }), class:'form-control'%>
        </div>
        <div class="field">
          <input type="hidden" name="club_id" value="<%= @club.id%>">
        </div>

        <div class="actions mt-5">
          <%= submit_tag "Mettre à jour le club", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>