<!-- Mettre à jour profil -->
        <div class="tm-top-d-box  ">
            <div class="uk-container uk-container-center">
                <section id="tm-top-d" class="tm-top-d uk-grid" data-uk-grid-match="{target:'> div > .uk-panel'}" data-uk-grid-margin="">

                    <div class="uk-width-1-1">
                        <div class="uk-panel">
                            <div class="donate-wrap">
                                <div class="donate-inner">
                                    <h3><span>Modifier mon profil</span></h3>
                                    <div class="uk-grid">
                                        <div class="uk-width-8-10 uk-push-1-10 intro-text">
                                         


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

        <%= devise_error_messages! %>

      
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w", placeholder: "Email" %><br><br><br />

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
     
        
          <%= f.password_field :password, autocomplete: "new-password", class: "w",  placeholder: "Nouveau mot de passe, Passer si vous ne voulez pas changer votre mot de passe " %><br><br><br />
   
   
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w", placeholder: "Confirmer votre mot de passe " %><br><br><br />
       

           <%= f.text_field :first_name, class: "w", placeholder: "Prénom"  %><br><br> <br>

           <%= f.text_field :last_name, class: "w", placeholder: "Nom"  %><br><br> <br>

           <%= f.number_field :age, class: "w", placeholder: "Âge"  %><br><br> <br>

            <%= f.text_field :description, class: "w", placeholder: "Description"  %><br><br> <br>

            <%= f.select(:gender, ['Masculin', 'Féminin']) %><br><br> <br>
   
           <%= f.text_field :pseudonym, class: "w", placeholder: "Surnom"  %><br><br> <br>
 
 
          <%= f.select :quarter_id, Quarter.all.map{ |c| [c.name, c.id] }, {include_blank: "Quartier"} , {class: "w"}%><br><br>

           <%= f.password_field :current_password, autocomplete: "current-password", class: "w" , placeholder: "Valider votre changement avec votre mot de passe"%><br><br>


<style type="text/css">
  .w{
    width: 400px; height: 30px;
    text-align: "center";
  }
</style>


                                          </div>
                                    </div>
                                 
                                       
                                        <br>
                                        <br>
                                       
                                          <%= f.submit "Mettre à jour", :class=>"donate-btn" %>
                                          <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr?" }, method: :delete , class:"donate-btn" %>

                                    
                                </div> <% end %>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
