<%= form_with(model: club, local: true) do |form| %>
  <% if club.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(club.errors.count, "error") %> prohibited this club from being saved:</h2>

      <ul>
        <% club.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_tag url_for(action: 'create'), method: "club" do %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Créer un club</h1>
        <div class="form-group">
          <%= label_tag :Nom %>
          <%= text_field_tag :name, @club.name, autofocus: true, class: "form-control"  %>
        </div>
        <div class="form-group">
          <%= label_tag :Catégorie %>
          <%= text_field_tag :category, @club.category, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>Quartier</label>
          <%=select_tag 'quarter_id', options_for_select(@quarters.collect{ |t| [t.name, t.id] }), class:'form-control'%>
        </div>

        <div class="actions mt-5">
          <%= submit_tag "Créer un club", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>