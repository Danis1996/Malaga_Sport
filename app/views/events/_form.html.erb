<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_tag url_for(action: 'create'), method: "event" do %>
    <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >
        <h1 class="h3 mb-3 font-weight-normal text-center">Créer un événement</h1>
        <div class="form-group">
          <%= label_tag :Date %>
          <%= date_field_tag :start_date," " , class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :Durée %>
    <%= time_field_tag :duration," " , class: "form-control"%>
        </div>
        <div class="form-group">
      <%= label_tag :Titre %>
      <%= text_field_tag :title," " , class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :Description %>
      <%= text_field_tag :description," " , class: "form-control"%>
    </div>

    <div class="form-group">
      <%= label_tag :Prix_en_Ariary%>
      <%= text_field_tag :price," " , class: "form-control"%>
    </div>

    <div class="form-group">
      <%= label_tag :Lieu %>
      <%= text_field_tag :location," " , class: "form-control" %>
    </div>

    <div class="form-group">
      <input type="hidden" name="club_id" value="<%=@club.id%>">
    </div>

        <div class="actions mt-5">
          <%= submit_tag "Créer l'événement", class: "btn btn-lg btn-primary btn-block" %>

        </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>