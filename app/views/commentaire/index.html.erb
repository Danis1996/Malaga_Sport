

       <div class="cardbox que">
<%= form_tag url_for(action: 'create'), method: "comment" do %>
<input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >
            <div class="photo-card" style="background-color: transparent;">
                <div class="photo-background">
                  
                  <p><em>Évenement du club : </em><strong><%= @event.club.name %></strong></p>

                  <i>Titre de l'événement :</i>
                  <h3> <%= @event.title %></h3>

                  <i >Description de l'événement : </i>
                  <h4><%= @event.description %></h4><br><br>
                </div>

               
                <div class="photo-details">
                <h2>Commentaires : (<%= @event_comments_count %>)   </h2>
                <% @event.commentaires.each do |coms| %>

                <strong style="color: blue;"><%= User.find(coms.user_id).first_name %></strong><br>
                <%= coms.content%><br>
            <a href="/events/<%= @event.id %>/commentaire/<%=coms.id%>/">Voir</a>
              <% if current_user%>

                <%= form_tag url_for(action: 'create'), method: "commentaire" do %>
                <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >
             
              <%= label_tag 'Contenu' %>
              <%= text_area_tag 'content' %>
              <br /> <br />

              <%= submit_tag "Créer un commentaire" %>

            <% end %>
            <% end %>
            <% end %>        
                </div>
            </div>
<% end %>
  </div>