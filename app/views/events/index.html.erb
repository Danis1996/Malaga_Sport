<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" style="text-align:center;">Start date</th>
      <th scope="col" style="text-align:center;">Duration</th>
      <th scope="col" style="text-align:center;">Title</th>
      <th scope="col" style="text-align:center;">Description</th>
      <th scope="col" style="text-align:center;">Price</th>
      <th scope="col" style="text-align:center;">Location</th>
      <th colspan="3" style="text-align:center;"></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
    <tr>
      <td style="text-align:center;"><%= event.start_date %></td>
        <td style="text-align:center;"><%= event.duration %></td>
        <td style="text-align:center;"><%= event.title %></td>
        <td style="text-align:center;"><%= event.description %></td>
        <td style="text-align:center;"><%= event.price %></td>
        <td style="text-align:center;"><%= event.location %></td>
        <td style="text-align:center;"><%= link_to 'Afficher', event %></td>
    </tr>
    <%end%>
  </tbody>
</table>
<%if current_user%>
<% if current_user.club != nil%>
<%= link_to 'Nouvelle événement', new_event_path %>
<%end%>
<%end%>